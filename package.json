{
  "name": "bunnote",
  "displayName": "BunNote",
  "description": "Write and manage notes directly from VS Code with full markdown support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onView:bunNoteView"],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id":"bunNote",
          "title": "BunNote",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "bunNote":[
        {
          "id":"bunNoteView",
          "name": "Vault",
          "type": "webview"
        }
      ]
    },
    "commands": [{
      "command": "bunnote.helloWorld",
      "title": "Hello World"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
