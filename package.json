{
  "name": "bunnote",
  "displayName": "BunNote",
  "description": "Write and manage notes directly from VS Code with full markdown support",
  "version": "1.0.5",
  "publisher": "elharis",
  "repository": {
    "type": "git",
    "url": "https://github.com/elhariss/BunNote"
  },
  "bugs": {
    "url": "https://github.com/elhariss/BunNote/issues"
  },
  "homepage": "https://github.com/elhariss/BunNote#readme",
  "license": "MIT",
  "keywords": [
    "notes",
    "markdown",
    "note-taking",
    "vault",
    "bunnote",
    "notebook",
    "editor"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Notebooks",
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bunNote",
          "title": "BunNote",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "bunNote": [
        {
          "id": "bunNoteVault",
          "name": "Vault",
          "icon": "media/icon.png"
        },
        {
          "id": "bunNoteEditor",
          "name": "Editor",
          "type": "webview",
          "icon": "media/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "bunnote.setVault",
        "title": "BunNote: Set Vault Folder",
        "icon": "$(gear)"
      },
      {
        "command": "bunnote.createNote",
        "title": "BunNote: Create New Note",
        "icon": "$(add)"
      },
      {
        "command": "bunnote.createFolder",
        "title": "BunNote: Create New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "bunnote.openFile",
        "title": "BunNote: Open Note"
      },
      {
        "command": "bunnote.openInMainEditor",
        "title": "BunNote: Open in Main Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "bunnote.renameFile",
        "title": "BunNote: Rename File",
        "icon": "$(edit)"
      },
      {
        "command": "bunnote.deleteFile",
        "title": "BunNote: Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "bunnote.renameFolder",
        "title": "BunNote: Rename Folder",
        "icon": "$(edit)"
      },
      {
        "command": "bunnote.deleteFolder",
        "title": "BunNote: Delete Folder",
        "icon": "$(trash)"
      },
      {
        "command": "bunnote.refreshFiles",
        "title": "BunNote: Refresh Files",
        "icon": "$(refresh)"
      },
      {
        "command": "bunnote.openSettings",
        "title": "BunNote: Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "bunnote.openInEditor",
        "title": "Open in Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bunnote.openInEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "bunnote.createFolder",
          "when": "view == bunNoteVault",
          "group": "navigation"
        },
        {
          "command": "bunnote.createNote",
          "when": "view == bunNoteVault",
          "group": "navigation"
        },
        {
          "command": "bunnote.refreshFiles",
          "when": "view == bunNoteVault",
          "group": "navigation"
        },
        {
          "command": "bunnote.openSettings",
          "when": "view == bunNoteVault",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "bunnote.openInEditor",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bunnote.openInMainEditor",
          "when": "view == bunNoteVault && viewItem == bunnoteFile",
          "group": "inline"
        },
        {
          "command": "bunnote.renameFile",
          "when": "view == bunNoteVault && viewItem == bunnoteFile",
          "group": "navigation"
        },
        {
          "command": "bunnote.deleteFile",
          "when": "view == bunNoteVault && viewItem == bunnoteFile",
          "group": "navigation"
        },
        {
          "command": "bunnote.renameFolder",
          "when": "view == bunNoteVault && viewItem == bunnoteFolder",
          "group": "navigation"
        },
        {
          "command": "bunnote.deleteFolder",
          "when": "view == bunNoteVault && viewItem == bunnoteFolder",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "bunnote.markdownEditor",
        "displayName": "BunNote Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "BunNote",
      "properties": {
        "bunnote.vaultPath": {
          "type": "string",
          "default": "",
          "description": "Path to your BunNote vault folder"
        },
        "bunnote.defaultVaultPath": {
          "type": "string",
          "default": "",
          "description": "Default vault path to use when no workspace vault is set"
        },
        "bunnote.autoUseDefaultVault": {
          "type": "boolean",
          "default": true,
          "description": "Automatically use the default vault path if no workspace vault is configured"
        },
        "bunnote.colorMarkers": {
          "type": "boolean",
          "default": false,
          "description": "Color Markdown markers in the editor."
        },
        "bunnote.editorFontSize": {
          "type": "number",
          "default": 14,
          "minimum": 10,
          "maximum": 32,
          "description": "Editor font size (px)."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}